{
  "name": "@bbc/http-transport",
  "version": "4.6.2",
  "description": "A flexible, modular REST client built for ease-of-use and resilience.",
  "main": "index.js",
  "types": "index.d.ts",
  "scripts": {
    "test": "mocha && npm run lint",
    "jsdoc": "jsdoc -c ./docconfig/jsdoc.json",
    "lint": "eslint ./lib ./test",
    "coverage": "nyc mocha && nyc report --reporter=html && nyc report --reporter=json-summary"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bbc/http-transport.git"
  },
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/bbc/http-transport/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "https",
    "rest client",
    "http-transport",
    "cache",
    "circuit",
    "breaker",
    "rest",
    "http",
    "json",
    "client"
  ],
  "devDependencies": {
    "chai": "^6.0.1",
    "codeclimate-test-reporter": "^0.5.1",
    "coveralls": "^3.0.2",
    "eslint": "^9.36.0",
    "eslint-config-iplayer": "^10.0.1",
    "eslint-plugin-mocha": "^11.1.0",
    "jsdoc": "^4.0.4",
    "mocha": "^11.7.2",
    "nock": "^14.0.10",
    "nyc": "^17.1.0",
    "sinon": "^21.0.0"
  },
  "dependencies": {
    "@types/node-fetch": "^2.6.11",
    "http-proxy-agent": "^7.0.0",
    "koa-compose": "^4.0.0",
    "lodash": "^4.17.4",
    "node-fetch": "^3.3.2",
    "qs": "^6.5.1"
  },
  "mocha": {
    "recursive": true,
    "exit": true
  },
  "eslintConfig": {
    "extends": "iplayer",
    "parserOptions": {
      "ecmaVersion": "latest"
    },
    "rules": {
      "space-before-function-paren": 0
    }
  }
}
