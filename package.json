{
  "name": "@bbc/http-transport",
  "version": "3.5.6",
  "description": "A flexible, modular REST client built for ease-of-use and resilience.",
  "main": "index.js",
  "types": "index.d.ts",
  "scripts": {
    "test": "mocha",
    "jsdoc": "jsdoc -c ./docconfig/jsdoc.json",
    "lint": "eslint ./src ./test",
    "coverage": "nyc mocha && nyc report --reporter=html && nyc report --reporter=json-summary",
    "posttest": "npm run lint"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bbc/http-transport.git"
  },
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/bbc/http-transport/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "https",
    "rest client",
    "http-transport",
    "cache",
    "circuit",
    "breaker",
    "rest",
    "http",
    "json",
    "client"
  ],
  "devDependencies": {
    "chai": "^3.5.0",
    "codeclimate-test-reporter": "^0.5.1",
    "coveralls": "^3.0.2",
    "eslint": "^4.1.1",
    "eslint-config-iplayer-es6": "^3.1.0",
    "eslint-plugin-mocha": "^4.11.0",
    "jsdoc": "^3.5.5",
    "mocha": "^7.2.0",
    "nock": "^11.9.1",
    "nyc": "^15.1.0",
    "sinon": "^1.15.3"
  },
  "dependencies": {
    "@types/request": "^2.47.1",
    "bluebird": "^3.5.0",
    "koa-compose": "^4.0.0",
    "lodash": "^4.17.4",
    "node-fetch": "^3.3.2",
    "qs": "^6.5.1",
    "request": "^2.88.0",
    "request-promise-native": "^1.0.9"
  },
  "mocha": {
    "recursive": true,
    "exit": true
  },
  "eslintConfig": {
    "extends": "iplayer-es6",
    "parserOptions": {
      "ecmaVersion": 2017
    },
    "rules": {
      "space-before-function-paren": 0
    }
  }
}
